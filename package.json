{
    "name": "template-vite-ts",
    "description": "A Phaser 3 TypeScript template using Vite.",
    "version": "1.3.1",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/phaserjs/template-vite-ts.git"
    },
    "author": "Phaser Studio <support@phaser.io> (https://phaser.io/)",
    "license": "MIT",
    "licenseUrl": "http://www.opensource.org/licenses/mit-license.php",
    "bugs": {
        "url": "https://github.com/phaserjs/template-vite-ts/issues"
    },
    "homepage": "https://github.com/phaserjs/template-vite-ts#readme",
    "scripts": {
        "dev": "vite --config vite/config.dev.mjs",
        "build": "vite build --config vite/config.prod.mjs",
        "lint-code": "eslint . --ext ts,tsx --report-unused-disable-directives --cache --max-warnings 10",
        "lint-code-fix": "npm run lint-code -- --fix",
        "lint-styles": "stylelint \"src/**/*.scss\" --cache --max-warnings 10",
        "lint-styles-fix": "npm run lint-styles -- --fix",
        "lint-fix": "npm run lint-code-fix && npm run lint-styles-fix"
    },
    "devDependencies": {
        "terser": "^5.31.0",
        "typescript": "^5.4.5",
        "vite": "^5.3.1",
        "@typescript-eslint/eslint-plugin": "^6.14.0",
        "@typescript-eslint/parser": "^6.14.0",
        "eslint": "^8.55.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-import-resolver-typescript": "^3.6.1",
        "eslint-plugin-import": "^2.29.1",
        "eslint-plugin-prettier": "^5.1.3",
        "eslint-plugin-react-refresh": "^0.4.5",
        "prettier": "^3.1.1"
    },
    "dependencies": {
        "phaser": "^3.80.1"
    }
}
